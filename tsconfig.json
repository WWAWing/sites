{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2022",
      "es2021",
      "es2020",
      "es2019",
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "es5",
      "dom"
    ],
    "strict": true,
    "noLib": false,
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "scripts/**/*.ts"
  ]
}
