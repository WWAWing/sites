
mixin releaseUnit(releaseUnit, isLatest, isUnstable=false)
  section(class="release-unit-section")
    h3 v#{releaseUnit.version} #{isLatest ? "(最新版)" : ""}
    div(class="action-area")
        a(href="https://github.com/WWAWing/WWAWing/releases/download/v" + releaseUnit.version + "/wwawing-dist.zip" class="distribution-download-anchor" + (isUnstable ? " unstable-distribution-download-anchor" : "")) 完全版を入手
        a(href="https://github.com/WWAWing/WWAWing/releases/download/v" + releaseUnit.version + "/wwawing-update.zip" class="distribution-download-anchor" + (isUnstable ? " unstable-distribution-download-anchor" : "")) 更新版を入手
        a(href="https://github.com/WWAWing/WWAWing/releases/tag/v" + releaseUnit.version class="info-anchor") リリースノート
        if isLatest
            a(href="../wing/wwamap.html" class="info-anchor") テストプレイ


doctype html
html(lang="ja")
    head
        meta(charset="UTF-8")
        title WWA Wing 配布ページ
        link(rel="stylesheet" href="./styles.css")
    body
        section(class="main-section")
            h1 WWA Wing 配布ページ
            div(class="main-area")
                section(class="stable-release-section")
                    h2 安定版
                    each releaseUnit in data.stable.releases
                        +releaseUnit(releaseUnit, stableLatestVersion === releaseUnit.version)
                    footer
                        p
                            a(href="./old-releases") さらに過去の安定版を見る

                section(class="unstable-release-section")
                    h2 不安定版
                    each releaseUnit in data.unstable.releases
                        +releaseUnit(releaseUnit, unstableLatestVersion === releaseUnit.version, true)

        footer
            p
                a(href="../") WWA Wingのトップに戻る
            p
                | (C) 2013-2026 WWA Wing Team
